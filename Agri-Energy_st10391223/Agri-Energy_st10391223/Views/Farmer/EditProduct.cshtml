@model Agri_Energy_st10391223.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<style>
    /* Teal color scheme as per user preference */
    .card-header {
        background-color: #2e8687 !important;
        border-color: #2e8687 !important;
    }
    
    .btn-secondary {
        background-color: #2e8687 !important;
        border-color: #2e8687 !important;
    }
    
    /* Keep primary buttons with original green styling */
    .btn-primary {
        background-color: #28a745 !important;
        border-color: #28a745 !important;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center text-white">
                    <h3><i class="bi bi-pencil-square"></i> Edit Product</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <img src="~/images/producttag_icon.png" alt="Product" class="img-fluid mb-3" style="max-width: 120px;" />
                        </div>
                        <div class="col-md-8">
                            <p class="lead">Update the details for your product below.</p>
                        </div>
                    </div>

                    <form asp-action="EditProduct">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FarmerId" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Product Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label">Product Category</label>
                            <select asp-for="Category" class="form-select">
                                <option value="Vegetables">Vegetables</option>
                                <option value="Fruits">Fruits</option>
                                <option value="Grains">Grains</option>
                                <option value="Dairy">Dairy</option>
                                <option value="Poultry">Poultry</option>
                                <option value="Livestock">Livestock</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ProductionDate" class="control-label">Production Date</label>
                            <input asp-for="ProductionDate" class="form-control" type="date" />
                            <span asp-validation-for="ProductionDate" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a asp-action="Dashboard" class="btn btn-secondary ml-2">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
