@{
    ViewData["Title"] = "Farmer Account Created";
    string farmerEmail = TempData["FarmerEmail"]?.ToString();
    string farmerPassword = TempData["FarmerPassword"]?.ToString();
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-success">
                <div class="card-header text-center bg-success text-white">
                    <h3><i class="bi bi-check-circle-fill"></i> Farmer Account Created Successfully</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="~/images/farmer_icon.png" alt="Farmer" class="img-fluid rounded-circle mb-3" style="max-width: 120px;" />
                        <h4 class="text-success">New Farmer Account Details</h4>
                    </div>

                    @if (!string.IsNullOrEmpty(farmerEmail) && !string.IsNullOrEmpty(farmerPassword))
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> <strong>Important:</strong> Please take note of these login credentials. This is the only time they will be shown.
                        </div>

                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-3">Email/Username:</dt>
                                    <dd class="col-sm-9"><code>@farmerEmail</code></dd>
                                    
                                    <dt class="col-sm-3">Password:</dt>
                                    <dd class="col-sm-9"><code>@farmerPassword</code></dd>
                                </dl>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Please provide these credentials to the farmer. They will be able to log in and manage their products.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i> Unable to display login credentials. Please try adding the farmer again.
                        </div>
                    }

                    <div class="form-group text-center mt-4">
                        <a asp-action="Dashboard" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Back to Dashboard
                        </a>
                        <a asp-action="AddFarmer" class="btn btn-secondary ml-2">
                            <i class="bi bi-plus-circle"></i> Add Another Farmer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
